generator client {
    provider = "prisma-client-js"
    output   = "../lib/generated/prisma"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
    id         String   @id @default(cuid())
    username   String   @unique @default(cuid())
    email      String   @unique
    created_at DateTime @default(now())
}

model UserAuth {
    userId   String @id
    password String
}
